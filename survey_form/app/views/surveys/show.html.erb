<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @survey.name %>
</p>

<h1>Survey</h1>
	
	

		
	<% @questions.each do |question| %>
		<h4> <%= question.importance %>. <%= question.content %> </h4>
		<% question.answers.each do |answer| %>
		<div>

		<input type="radio"><%= answer.content %></div>

		<% end %>
	<% end %>
  <%= submit_tag("Submit") %>


<%= link_to 'Edit', edit_survey_path(@survey) %> |
<%= link_to 'Back', surveys_path %>
